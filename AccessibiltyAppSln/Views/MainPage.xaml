<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AccessibilityAppSln"
             x:Class="AccessibiltyAppSln.Views.MainPage"
             x:Name="Page">

    <Grid VerticalOptions="CenterAndExpand" RowDefinitions="Auto, Auto, Auto, Auto">
        <Image x:Name="MYImage" Grid.Row="0" Source="{Binding SelectedPhoto.PhotoPath}">
        </Image>
        <Button Grid.Row="1" BackgroundColor="Black" TextColor="White" Text="Upload Image"  Command="{Binding UploadAndDetectCommand}" />
        <Grid Grid.Row="2">
            <Label TextColor="Black" x:Name="Result1" Text="{Binding Captions}"/>
           
        </Grid>
    </Grid>

</ContentPage>
